<div class="camppost-up-contents">
 <div class="camppost-up-top-message">
 あなたの紹介するキャンプ場情報を入力して下さい！
 </div>
    <%= form_with(model: @camppost, local: true) do |f| %>

   <div class="camppost-new">
    <div class= "caamppost-send-main"> 
          <div class="camppost-information">

     <div class="weight-bold-text">
      <%="キャンプ場名"%>
      <%= f.text_area :name, class:"campposts-text", id:"camppost-name", placeholder:"キャンプ場名（必須 40文字まで)", maxlength:"40" %>
     </div> 
      
      
       <div class="img-upload">
         <div class="weight-bold-text">
           <span class="indispensable">画像</span>
         </div>
         <div class="click-upload">
           <p>
             クリックしてファイルをアップロード
           </p>
           <%= f.file_field :image, id:"camppost-image" %>
         </div>
       </div>
   
       <div class="camppost-explain">
        <div class="weight-bold-text">
         <%="紹介文"%> 
         <%= f.text_area :information, class:"campposts-text", id:"camppost-info", placeholder:"記事内容（必須 100文字まで)", rows:"7" ,maxlength:"1000" %> 
        </div>
       </div>
        <div class="camppost-detail"> 
         <div class="camppost-place-detail">          
                     <div class="weight-bold-text">
                      <%="県名"%>
                      <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"camppost-prefecture"}) %>
                     </div>
                     <div class="weight-bold-text">
                      <%="市町村以下の住所"%>
                      <%= f.text_area :city, class:"campposts-text", id:"camppost-city", placeholder:"市町村以下の住所", maxlength:"40" %>
                     </div>
                <div class="camppost-q-selects">
                     <div class="weight-bold-text">
                     <%="駐車場の有無"%> 
                     <%= f.collection_select(:parking_id, Parking.all, :id, :name, {}, {class:"select-box", id:"camppost-parking"}) %>
                     </div>
                     <div class="weight-bold-text">
                     <%="トイレの有無"%>
                     <%= f.collection_select(:toilet_id, Toilet.all, :id, :name, {}, {class:"select-box", id:"camppost-toilet"}) %>
                     </div>
                     <div class="weight-bold-text">
                     <%="風呂の有無"%> 
                     <%= f.collection_select(:bath_id, Bath.all, :id, :name, {}, {class:"select-box", id:"camppost-bath"}) %>
                     </div>
                </div>
         </div>
         <div class="camppost-place-detail">  
                     <div class="weight-bold-text">
                      <%="利用したキャンプサイト名"%>
                      <%= f.text_area :campsitename, class:"campposts-text", id:"camppost-name", placeholder:"キャンプサイト名（任意 10文字まで)", maxlength:"10" %>
                     </div> 
                <div class="camppost-q-selects">
                     <div class="weight-bold-text">
                     <%="水道の有無"%> 
                     <%= f.collection_select(:watersupply_id, Watersupply.all, :id, :name, {}, {class:"select-box", id:"camppost-watersupply"}) %>
                     </div>
                     <div class="weight-bold-text">
                     <%="電源の有無"%>
                     <%= f.collection_select(:outlet_id, Outlet.all, :id, :name, {}, {class:"select-box", id:"camppost-outlet"}) %>
                     </div>
                     <div class="weight-bold-text">
                     <%="焚火の可不可"%>
                     <%= f.collection_select(:fire_id, Fire.all, :id, :name, {}, {class:"select-box", id:"camppost-fire"}) %>
                     </div>
                     <div class="weight-bold-text">
                     <%="車乗入れの可不可"%>
                     <%= f.collection_select(:cargetin_id, Cargetin.all, :id, :name, {}, {class:"select-box", id:"camppost-cargetin"}) %> 
                     </div>
                </div>  
                     <div class="weight-bold-text">
                     <%="電話番号"%> 
                     <%= f.text_field :phone_number, class:"phone-number", id:"phone-number", placeholder:"電話番号があれば入力してください 例）09012345678",maxlength:"11"%>
                     </div>
                     <div class="weight-bold-text">
                     <%="キャンプ場公式Webサイト"%> 
                     <%= f.text_field :web_site, class:"campposts-text", id:"url", placeholder:"キャンプ場の公式サイト（任意）" %>
                     </div>
                     

                  <form> 
                    <div class="form-group">
	                   	<label class="control-label" for="usage1input2">テキスト</label>
                      <div class="col-2">
                      	<input type="text"  class="form-control form-control-lg" id="usage1input2" placeholder="入力">
                      </div>       
                    </div>
                  </form> 


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>


         </div>
        </div>
              <div class="actions">
               <div class="weight-bold-text">
                <%= f.submit "記事投稿" ,class: "button is_warning is-light"%>                               
               </div>
              </div>
              
              

               <div class="actions">
                <div class="back">
                   <%=link_to "戻る", root_path, class:"back-letter" %>
                </div>
               </div>

              </div>


        </div>
    <% end %>
    </div>
</div>