<div class="registration">
 <div class="registration-new">
 
  <h2>新規登録</h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>


        <div class="img-upload">
         <div class="weight-bold-text">
           <span class="indispensable">User-img</span>
         </div>
         <div class="click-upload">
           <p>
             あなたのアイコン画像を登録してください(任意)
           </p>
           <p>
             クリックしてファイルをアップロード
           </p>
           <%= f.file_field :image, id:"user-image" %>
         </div>
       </div>



  <div class="field">
    <%= f.label :Username %><br />
    <%= f.text_field :username, placeholder:"ユーザー名", autofocus: true, autocomplete: "user"%>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, placeholder:"PC・携帯どちらでも可", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, placeholder:"6文字以上の半角英数字", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, placeholder:"同じパスワードを入力", autocomplete: "new-password" %>
  </div>
  
   <div class="weight-bold-text">
    <%= f.label :prefecture %><br />
    <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"user-prefecture"}) %>
   </div>



    <div class="field">
     <%= f.label :profile %>
     <div class="user-profile">
       自己紹介文を入力してください
     </div>
      <%= f.text_area :profile, class:"useer-profile-box", placeholder:"ユーザー情報を入力してください" %>
   </div>



    <div class="actions">
     <%= f.submit "Sign up",class:"register-btn" %>
    </div>
    <% end %>
 </div>
</div>

<%= render "devise/shared/links" %>
